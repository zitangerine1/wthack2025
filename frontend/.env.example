# Smart Pillow Frontend Environment Variables

# ESP32 Device Configuration
VITE_ESP32_HOST=192.168.1.100
VITE_ESP32_PORT=80
VITE_ESP32_PROTOCOL=http

# WebSocket Configuration (if using WebSocket for real-time data)
VITE_WS_HOST=192.168.1.100
VITE_WS_PORT=81
VITE_WS_PROTOCOL=ws

# API Configuration
VITE_API_BASE_URL=http://192.168.1.100
VITE_API_TIMEOUT=5000

# Device Settings
VITE_DEFAULT_DEVICE_NAME="Smart Pillow - Bedroom"
VITE_POLL_INTERVAL=1000

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_DATA=false

# Analytics & Monitoring
VITE_ENABLE_ANALYTICS=true
VITE_DATA_RETENTION_DAYS=30

# UI Configuration
VITE_THEME=light
VITE_ENABLE_DARK_MODE=true

# Notification Settings
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_SOUND=true

# Temperature Settings (in Celsius)
VITE_MIN_TEMP=18
VITE_MAX_TEMP=30
VITE_DEFAULT_DAY_TEMP=24
VITE_DEFAULT_NIGHT_TEMP=22

# Health Monitoring
VITE_MIN_HEART_RATE=50
VITE_MAX_HEART_RATE=120
VITE_HEALTH_CHECK_INTERVAL=30

# Sleep Analysis
VITE_SLEEP_GOAL_HOURS=8
VITE_ENABLE_SMART_WAKEUP=false

# Safety & Limits
VITE_MAX_HEATING_POWER=100
VITE_MAX_COOLING_POWER=100
VITE_SAFETY_TEMP_LIMIT=35
